// Place your settings in this file to overwrite the default settings
{
    // Controls the font size.(default:0)
    "editor.fontSize": 15,

    // Controls the font family.MS Gothic
    "editor.fontFamily": "Myrica M,Cascadia Mono,Consolas",

    // インデントの設定(true: スペース, false: タブ)
    "editor.insertSpaces": true,

    // スペースの表示とカーソル行のハイライト設定
    "editor.renderWhitespace": "all",
    "editor.renderControlCharacters": true,
    "editor.renderLineHighlight": "all",

    // Controls visibility of the glyph margin
    "editor.glyphMargin": true,

    // Control the cursor animation style
    "editor.cursorStyle": "line",
    "editor.cursorSmoothCaretAnimation": true,
    
    // ミニマップの表示設定
    "editor.minimap.enabled": false,

    // 文字コード自動判別
    "files.autoGuessEncoding": true,

    // ファイルの最終行を空行
    "files.insertFinalNewline": true,

    // カラーテーマの設定
    "workbench.colorTheme": "Tomorrow Night Blue",
    "workbench.colorCustomizations": {
        "[Tomorrow Night Blue]": {
            // 背景色を変更
            "editor.background": "#2e3440"
//            "editor.background": "#2e2030" // ノートPC用
        },

        // カーソル行のハイライト
        "editor.lineHighlightBackground": "#404040",

        // オプションの文字を見やすくする
        "terminal.ansiBrightBlack": "#808080"
    },

    // vscode-icon拡張を有効にする
    "workbench.iconTheme": "vscode-icons",

    // エディタレイアウトの保持
    "workbench.editor.closeEmptyGroups": false,

    // エクスプローラーから除外するファイルとフォルダ
    "files.exclude": {
        "**.vs": true,
        "**.Thumbs.db": true,
        "**/node_modules": true,
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.svn": true,
        "**/*.dll": true,
        "**/*.exe": true,
        "**/*.idb": true,
        "**/*.ilk": true,
        "**/*.lst": true,
        "**/*.o": true,
        "**/*.obj": true,
        "**/*.pdb": true,
        "**/*.tlog": true
    },

    // 自動整形を有効にする
    "editor.formatOnType": true,
    "editor.formatOnPaste": true,

    // Ctrl + マウスホイールでフォントのズームを有効にする
    "editor.mouseWheelZoom": true,

    // 未保存のタブを分かりやすくする
    "workbench.editor.highlightModifiedTabs": true,

    // ターミナルのフォント設定
    "terminal.integrated.fontFamily": "Cascadia Mono",

    // ターミナルのプロファイルを設定
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell"
        },
        "Command Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [],
            "icon": "terminal-cmd"
        },
        "Git Bash": {
            "source": "Git Bash",
            "icon": "terminal-bash"
        }
    },

    // デフォルトターミナルの設定
    "terminal.integrated.defaultProfile.windows": "PowerShell",

    // ターミナルのカーソルを縦線にして点滅
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",

    // ターミナルの強調表示を normal に設定
    // "terminal.integrated.fontWeight": "normal",
    // "terminal.integrated.fontWeightBold": "normal",

    // ターミナルのタイトルをエスケープシーケンスによる変更を許可
    "terminal.integrated.titleMode": "sequence",

    // ターミナルの表示位置を editor に設定（default:view）
    "terminal.integrated.defaultLocation": "view",

    // ターミナルのバッファ最大値変更
    "terminal.integrated.scrollback": 3200,

    // ターミナルの履歴
    "terminal.integrated.shellIntegration.history": 256,

    // テレメトリーを無効にする（MSに送らない）
    "telemetry.enableTelemetry": false,

    // Pythonのスタートページを表示しない
    "python.showStartPage": false,

    // Pythonの自動整形を使わない
    "python.formatting.provider": "none",

    // GLSLの自動整形を行わない
    "glsl-canvas.useFormatter": false,

    // リアルタイムシェーダーコンパイルを行わない（保存でコンパイル）
    "glsl-canvas.refreshOnChange": false,

    // Windows titleのスタイルをカスタムにする
    "window.titleBarStyle": "custom",

    // エクスプローラーのインデントライン表示
    "workbench.tree.renderIndentGuides": "onHover",

    // 強制的にシェルのキーバインドを使用
    "terminal.integrated.commandsToSkipShell": [
        "-workbench.action.quickOpen"
    ],

    // 特定の文字のみハイライトをOFFにする
    "editor.unicodeHighlight.allowedCharacters": {
        "　": true
    }, //run non-lint commands with bundle exec
    "ruby.useBundler": true,
    "ruby.useLanguageServer": true, // use the internal language server (see below)

    // VSCode自動設定
    "C_Cpp.updateChannel": "Insiders",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },
    "gauge.recommendedSettings.options": "Apply & Reload",
    "workbench.startupEditor": "none",
    "editor.guides.indentation": true,
    "remote.SSH.remotePlatform": {
        "linux": "linux"
    },
    "window.newWindowDimensions": "inherit"
}

